
extends layout

block content
	nav(role="navigation").navbar.navbar-inverse.navbar-fixed-top
		.navbar-header
			button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
				span.icon-bar
				span.icon-bar
				span.icon-bar	
			a(href='#').navbar-brand Your Logo
		.collapse.navbar-collapse
			ul.nav.navbar-nav
				li
					a(href!="#/print") Account List
				li
					a(href!="#/signin") Sign in
				li
					a(href="#/account") My Account
			.navbar-right(ng-controller='HomeController')
				button#btn-logout.btn.btn-primary.navbar-btn(ng-click='attemptLogout()')
					span.glyphicon.glyphicon-lock
					span   Sign out
	.div(ng-view)
	//include account 
	include modals/alert
	include modals/confirm

